// flowchart_assignment1
digraph {
	graph [splines=ortho]
	node [fontname=helvetica fontsize=15]
	edge [concentrate=true]
	S [label=Start fillcolor=grey80 shape=circle style=filled]
	R [label="Read energy_use.xlsx" fillcolor=cornflowerblue fontcolor=white shape=box style=filled]
	T [label="Choosing task" shape=box]
	S -> R [label=" hei" color=red constraint=true]
	R -> T [constraint=true]
	struct1 [label="<f0> Task 1|<f1> Task 2|<f2> Task 3" shape=record]
	T -> struct1
	A1 [label="Select appliances:
 EV, laundry machine and dishwasher" shape=box]
	A2 [label="Select appliances:
 All appliances (shift + non-shift + EV)" shape=box]
	A3 [label="Select appliances:
 All non-shift and some shiftable appliances" shape=box]
	struct1:f0 -> A1 [constraint=true]
	struct1:f1 -> A2 [constraint=true]
	struct1:f2 -> A3 [constraint=true xlabel="Households: 30"]
	p1 [label="Price=ToU" fixedsize=true height=1.1 shape=circle width=1.1]
	p2 [label="Price=RTP" fixedsize=true height=1.1 shape=circle width=1.1]
	A1 -> p1 [constraint=true]
	A2 -> p2 [constraint=true]
	Lin [label="Linprog calculation" shape=box]
	A1 -> Lin [constraint=true style=invis]
	A2 -> Lin [constraint=true style=invis]
	p1 -> Lin [constraint=false nodesep=0.1]
	p2 -> Lin [constraint=false nodesep=0.1]
	I1 [label="Plot==True" fixedsize=true height=1.2 shape=diamond width=1.2]
	Lin -> I1 [constraint=true nodesep=0.1]
	Plot1 [label="Creates and shows plots" nodesep=10 shape=box]
	Calc1 [label="Prints minimized cost" shape=box]
	p1 -> Plot1 [constraint=true style=invis]
	p2 -> Calc1 [constraint=true style=invis]
	I1 -> Plot1 [constraint=false xlabel="   yes"]
	I1 -> Calc1 [constraint=false xlabel="   no"]
	E [label="EV: yes/no 
 Add shiftable appliances (>= 2)" shape=box]
	A3 -> E [constraint=true]
	YN [label="Added min. 2 shiftable appliances?" shape=diamond]
	E -> YN [label=" test" constraint=true]
}
